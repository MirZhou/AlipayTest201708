<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lanmishu.alipaytest.MainActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:id="@+id/btnAliPay"
                android:text="支付宝支付测试"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="10dp"
                android:layout_marginTop="10dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="30dp">
        <Button
                android:id="@+id/btnWXPay"
                android:text="微信支付测试"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="50dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="30dp">
        <Button
                android:id="@+id/btnCheckUpdate"
                android:text="软件升级"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="50dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:focusable="true"
                  android:focusableInTouchMode="true" android:layout_height="wrap_content"
                  android:layout_marginTop="30dp">
        <EditText
                android:id="@+id/editNum"
                android:inputType="numberDecimal"
                android:layout_width="match_parent" android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="30dp">
        <TextView
                android:id="@+id/txtNum"
                android:layout_width="match_parent" android:layout_height="30dp"/>
    </LinearLayout>

</LinearLayout>
